@import url('https://fonts.googleapis.com/css?family=Josefin+Sans:400,300italic,400italic,600,600italic,700,300')

$f1 = 'Josefin Sans', sans-serif
$black = #000000
$demo1 = #e1ffff
$demo2 = #FFEFEA
$demo3 = #ffffc4
$white = #ffffff

#theme-options
	z-index 9999
	background-color $white
	position fixed
	top 150px
	left -220px
	width 220px
	color $black
	transition all .4s ease-in-out
	text-align center
	font-family $f1
	&.open
		left 0
		box-shadow 1px 1px 3px 0 #f7f7f7
	a.switcher_btn
		position absolute
		top 0
		right -50px
		display block
		background-color $black
		color $white
		font-size 20px
		text-align center
		text-decoration none
		width 50px
		height 50px
		line-height 50px
	h4
		text-transform uppercase
		font-size 14px
		margin 0
		letter-spacing 2px
		color $white
		background-color $black
		line-height 50px
		height 50px
	h5
		text-transform uppercase
		color $black
		margin-bottom 20px
		letter-spacing 2px
		font-size 12px
		font-weight 600
	.btn
		padding 8px 23px
		margin-bottom 20px

.colors
	padding 0 20px
	margin-bottom 20px
	a
		display inline-block
		width 30px
		height 30px
		margin 0 12px
		position relative
		border 1px solid $black
		z-index 6
		&::before
			content ''
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			margin-top -6px
			margin-right -6px
			z-index 2


#color1
	background-color $demo1
	&:before
		background-color lighten($demo1, 20%)

#color2
	background-color $demo2
	&:before
		background-color lighten($demo2, 20%)

#color3
	background-color $demo3
	&:before
		background-color lighten($demo3, 20%)



@media (max-width: 767px) 		
	#theme-options
		display none
